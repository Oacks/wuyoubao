/* pages/order/order.wxss */

.content-code {
    position: absolute;
    z-index: 999;
    top: 0;
    /* transform: translateY(-50%); */
    width: 100px;
    height: 40px;
    line-height: 40px;
    text-align: center;
    right: 0;
    display: inline-block;
    border: 1px solid #ccc;
    border-radius: 5px;
}

.disabled {
    color: #fff;
    background-color: #eee;
}

.item-container {
    width: 100%;
    margin-top: 10px;
}

.item-title {
    width: 100%;
    overflow: hidden;
    background-color: #5cbd41;
    height: 36px;
    border-bottom: 1px solid #eee;
}

.item-title-word {
    width: 100%;
    margin-left: 10px;
    height: 36px;
    line-height: 36px;
    padding-left: 10px;
    background-color: #fff;
    font-size: 13px;
}

.item-content {
    width: 100%;
    height: 38px;
    background-color: #fff;
    position: relative;
    /* border-bottom: 1px solid #eee; */
}  

.content-title {
    padding-left: 20px;
    display: inline-block;
    width: 130px;
    height: 100%;
    text-align: left;
    line-height: 38px;
    background-color: #fff;
    font-size: 13px;
    color: #333;
    vertical-align: middle;
}

.content-input {
    display: inline-block;
    width: 60%;
    background-color: #fff;
    font-size: 13px;
    height: 38px;
    line-height: 38px;
    vertical-align: middle;
    color: #888;
}

.custom-btn {
    margin-top: 30px;
    margin-bottom: 30px;
}