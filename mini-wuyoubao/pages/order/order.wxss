/* pages/order/order.wxss */
.bggrey {
    background: #F1F1F1;
}

.content-code {
    position: absolute;
    z-index: 999;
    top: 0;
    /* transform: translateY(-50%); */
    width: 100px;
    height: 40px;
    line-height: 40px;
    text-align: center;
    right: 0;
    display: inline-block;
    border-radius: 5px;
    color: #3EC755;
}

.disabled {
    color: #fff;
    background-color: #eee;
}

.item-container {
    width: 100%;
    margin-top: 10px;
}

.item-title {
    position: relative;
    width: 100%;
    overflow: hidden;
    height: 112rpx;
    background-color: #fff;
    border-bottom: 1px solid #eee;
}

.item-title-word {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    border-left: 3px solid #3EC755;
    padding-left: 8rpx;
    width: 100%;
    margin-left: 10px;
    height: 30rpx;
    line-height: 30rpx;
    margin-left: 36rpx;
    background-color: #fff;
    font-size: 16px;
    color: #181818;
    font-weight: bold;
}

.item-content {
    display: flex;
    width: 100%;
    height: 38px;
    background-color: #fff;
    position: relative;
    /* border-bottom: 1px solid #eee; */
}  

.content-title {
    padding-left: 20px;
    display: inline-block;
    width: 312rpx;
    height: 100%;
    text-align: left;
    line-height: 38px;
    background-color: #fff;
    font-size: 13px;
    color: #333;
    vertical-align: middle;
}

.content-input {
    display: inline-block;
    flex: 1;
    background-color: #fff;
    font-size: 13px;
    height: 38px;
    line-height: 38px;
    vertical-align: middle;
    color: #181818;
}

.phcolor {
    color: #ACACAC;
}

.phcolor-yuan {
    color: #3EC755;
}

.custom-btn {
    margin-top: 30px;
    margin-bottom: 30px;
}

.pic-tips {
    width: 100%;
    color: red;
    padding-left: 20px;
    font-size: 12px;
    text-align: left;
}

.pic-upload {
    width: 100%;
    line-height: 40px;
    background-color: #fff;
    overflow: hidden;
    text-align: center;
}

.pic-box {
    position: relative;
    display: inline-block;
    width: 660rpx;
    padding: 10rpx;
    margin: 0 auto;
    text-align: center;
}

.pic-item {
    display: inline-block;
    width: 308rpx;
    height: 214rpx;
    margin-right: 5px;
    margin-bottom: 5px;
}

.pic-img {
    display: inline-block;
    width: 308rpx;
    height: 214rpx;
}

.add-btns {
    width: 100%;
}

.add-pic {
    position: relative;
    width: 140rpx;
    height: 140rpx;
    background-color: #fff;
    border-radius: 8rpx;
    border: 1px solid #D2D2D2;
}

.add-pic::before {
    content: '';
    position: absolute;
    height: 2px;
    width: 70rpx;
    background-color: #D2D2D2;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
}
.add-pic::after {
    content: '';
    position: absolute;
    height: 70rpx;
    width: 2px;
    background-color: #D2D2D2;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
}
