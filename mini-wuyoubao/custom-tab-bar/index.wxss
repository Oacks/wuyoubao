.tab-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 0;
  background: #fff;
  display: flex;
  overflow: hidden;
  /* padding-bottom: env(safe-area-inset-bottom); */
  margin-bottom: constant(safe-area-inset-bottom);
  margin-bottom: env(safe-area-inset-bottom);
}

