.tab-bar-border {
  /* background-color: rgba(0, 0, 0, 0.33); */
  background-color: #fff;
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 1px;
  transform: scaleY(0.5);
}

.tab-bar-item {
  flex: 1;
  text-align: center;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  height: 0;
}

.tab-bar-item cover-image {
  width: 40rpx;
  height: 0;
}

.tab-bar-item cover-view {
  font-size: 10px;
}
