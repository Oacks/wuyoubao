page {
    background: #fff;
  }
  
  .line-box {
    width: 100%;
    padding: 10px;
    overflow-x: hidden;
  }
  .process-remark {
    font-size: 24rpx;
    font-weight: 500;
    color: #7B7B7B;
  }
  .process-time {
    width: 100%;
    display: inline-block;
    font-size: 22rpx;
    font-weight: 400;
    color: #ACACAC;
  }

  .process-con {
    display: flex;
    padding: 0 0 20rpx 0;
  }

  .icon-box {
    position: relative;
    display: flex;
    flex-direction: column;
    width: 70rpx;
    text-align: center;
    align-items: center;
    margin-top: 12rpx;
  }

  .content-box {
    flex: 1;
  }

  .icon-box .round {
    display: inline-block;
    width: 18rpx;
    height: 18rpx;
    border-radius: 50%;
    background-color: #3EC755;
  }

  .icon-box .line {
    flex: 1;
    width: 1px;
    background-color: #EBEBEB;
  }
  

  .pic-box {
    display: inline-block;
    width: 258rpx;
    height: 214rpx;
    margin-right: 5px;
    margin-bottom: 5px;
  }