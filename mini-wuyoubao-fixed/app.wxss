/**app.wxss**/
@import './WeUI/weui-wxss/dist/style/weui.wxss';
Page {
  background-color: #eee;
}

.top-container {
  position: relative;
  height: 400rpx;
  width: 100%;
  overflow: hidden;
}

.top-container::after {
  content: "";
  position: absolute;
  bottom: 0;
  left: 0;
  height: 20px;
  width: 100%;
  background-color: #eee;
  border-radius: 20px 20px 0 0;
}

.center-box {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}

.base-color {
  color: #5cbd41;
}

.word-color {
  color: #555;
}

/* 公共样式 */
.container {
  position: relative;
  background-color: #eee;
  min-height: 100vh;
  font-family:PingFangSC-Regular,PingFang SC;
}

.white {
  color: #fff;
}

.globalWidth {
  width: 670rpx;
  margin: 0 auto;
}

.ml20 {
  margin-left: 20rpx;
}

.barTitle {
  font-size: 17px;
}

.flex-column-layout {
  display: flex;
  flex-direction: column;
}

button {
  padding: 0 !important;
}

/* 定制样式 */
.custom-btn {
  width: 482rpx !important;
  height: 90rpx;
  border-radius: 45rpx;
  background: linear-gradient(to right, #5cbd41, #82cd6e);
  font-size: 36rpx;
  color: #fff;
  font-weight: normal;
  line-height: 90rpx;
  text-align: center;
}

.tips {
  position: absolute;
  width: 106rpx;
  height: 40rpx;
  border-radius: 21rpx;
  font-size: 20rpx;
  line-height: 40rpx;
  text-align: center;
  color: #fff;
}

.ml40 {
  margin-left: 40rpx;
}
