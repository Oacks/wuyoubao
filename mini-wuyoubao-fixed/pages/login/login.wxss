
.container {
    background-color: #fff;
}

.login-title {
    position: relative;
    height: 46px;
    margin-top: 60px;
}

.logo-cn,.logo-en {
    position: absolute;
    left: 50%;
    transform: translateX(-50%);
}
.logo-cn {
    top: 0;
    width: 80px;
    height: 30px;
}

.logo-en {
    bottom: 0;
    width: 80px;
    height: 16px;
}

.login-title {
    font-weight: 800;
    font-size: 20px;
    color: #666;
}

.login-form {
    margin: 0 auto;
}
.item-container {
    width: 100%;
    margin-top: 10px;
}

.item-content {
    position: relative;
    margin-top: 20px;
    width: 90%;
    margin: 0 auto;
    text-align: left;
    height: 40px;
}

.content-title {
    display: inline-block;
    vertical-align: middle;
    text-align: center;
    width: 10%;
    height: 40px;
}

.content-icon {
    margin-top: 10px;
    width: 20px;
    height: 20px;
    vertical-align: middle;
}

.content-input {
    display: inline-block;
    border-bottom: 1px solid #eee;
    vertical-align: middle;
    width: 90%;
    height: 40px;

}

.content-code {
    position: absolute;
    z-index: 999;
    top: 0;
    /* transform: translateY(-50%); */
    width: 100px;
    height: 40px;
    line-height: 40px;
    text-align: center;
    right: 0;
    display: inline-block;
    border: 1px solid #ccc;
    border-radius: 5px;
}

.item-title {
    width: 100%;
    overflow: hidden;
    background-color: #5cbd41;
    height: 36px;
    border-bottom: 1px solid #eee;
}

.disabled {
    color: #fff;
    background-color: #eee;
}

.login-btn {
    width: 320px;
    margin: 20px auto;
    color: #fff;
    height: 40px;
    font-size: 16px;
    line-height: 40px;
    border-radius: 3px;
    background-color: #6fde51;
}

.header {
    margin: 90rpx 0 30rpx 50rpx;
    text-align: center;
    width: 650rpx;
    height: 200rpx;
    line-height: 200rpx;
    color: #333;
    font-size: 20px;
}

.auth-page {
    position: relative;
    text-align: center;
}

.header image {
    width: 200rpx;
    height: 200rpx;
}

.content {
    color: #333;
    margin-bottom: 90rpx;
}

.content text {
    display: block;
    color: #9d9d9d;
    margin-top: 40rpx;
}

.bottom {
    border-radius: 80rpx;
    margin: 70rpx auto;
    font-size: 35rpx;
}
