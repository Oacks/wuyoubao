/* pages/order/order.wxss */

.order-container {
    background-color: #F1F1F1;
    flex: 1;
}

.item-container {
    width: 684rpx;
    margin-top: 32rpx;
    margin: 32rpx auto 0;
    border-radius: 12rpx;
    overflow: hidden;
}

.item-title {
    width: 100%;
    height: 85rpx;
    line-height: 85rpx;
    overflow: hidden;
    border-bottom: 1px solid #f2f2f2;
    padding-left: 23rpx;
    font-weight: bold;
    font-size: 32rpx;
    background-color: #fff;
}

.item-content {
    display: flex;
    width: 100%;
    height: 85rpx;
    line-height: 85rpx;
    background-color: #fff;
    padding-left: 23rpx;
    font-size: 30rpx;
}  

.item-area-content {
    display: flex;
    width: 100%;
    background-color: #fff;
    padding-left: 23rpx;
    font-size: 30rpx;
}

.content-title {
    display: inline-block;
    width: 130px;
    height: 100%;
    text-align: left;
    line-height: 38px;
    background-color: #fff;
    font-size: 13px;
    color: #333;
    vertical-align: middle;
}


.content-area {
    flex: 1;
    display: inline-block;
    width: 100%;
    padding-right: 24rpx;
    padding-top: 24rpx;
    background-color: #fff;
    font-size: 13px;
    height: 228rpx;
    line-height: 0 !important;
    vertical-align: middle;
    color: #333;
}

.content-input {
    flex: 1;
    display: inline-block;
    width: 60%;
    padding-right: 24rpx;
    background-color: #fff;
    font-size: 13px;
    height: 38px;
    line-height: 38px;
    vertical-align: middle;
    color: #333;
}

.phcolor {
    color: #ACACAC;
}

.custom-btn {
    margin-top: 30px;
    margin-bottom: 30px;
}

.pic-upload {
    width: 100%;
    line-height: 40px;
    background-color: #fff;
    overflow: hidden;
    text-align: center;
}

.pic-box {
    position: relative;
    display: inline-block;
    width: 660rpx;
    padding: 10rpx;
    margin: 0 auto;
    text-align: left;
}

.pic-item {
    display: inline-block;
    width: 308rpx;
    height: 214rpx;
    margin-right: 5px;
    margin-bottom: 5px;
}

.pic-img {
    display: inline-block;
    width: 308rpx;
    height: 214rpx;
}

.add-btns {
    width: 100%;
}

.add-pic {
    position: relative;
    width: 140rpx;
    height: 140rpx;
    background-color: #fff;
    border-radius: 8rpx;
    border: 1px solid #D2D2D2;
}

.add-pic::before {
    content: '';
    position: absolute;
    height: 2px;
    width: 70rpx;
    background-color: #D2D2D2;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
}
.add-pic::after {
    content: '';
    position: absolute;
    height: 70rpx;
    width: 2px;
    background-color: #D2D2D2;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
}

.process-box {
    background-color: #fff;
}