/* pages/order/order.wxss */

.item-container {
    width: 100%;
    margin-top: 10px;
}

.item-title {
    width: 100%;
    overflow: hidden;
    background-color: #5cbd41;
    height: 36px;
    border-bottom: 1px solid #eee;
}

.item-title-word {
    width: 100%;
    margin-left: 10px;
    height: 36px;
    line-height: 36px;
    padding-left: 10px;
    background-color: #fff;
    font-size: 13px;
}

.item-content {
    width: 100%;
    height: 38px;
    background-color: #fff;
    /* border-bottom: 1px solid #eee; */
}  

.content-title {
    padding-left: 20px;
    display: inline-block;
    width: 130px;
    height: 100%;
    text-align: left;
    line-height: 38px;
    background-color: #fff;
    font-size: 13px;
    color: #333;
    vertical-align: middle;
}

.content-input {
    display: inline-block;
    width: 60%;
    background-color: #fff;
    font-size: 13px;
    height: 38px;
    line-height: 38px;
    vertical-align: middle;
    color: #888;
}

.custom-btn {
    margin-top: 30px;
    margin-bottom: 30px;
}

.pic-upload {
    width: 100%;
    line-height: 40px;
    background-color: #fff;
    overflow: hidden;
    text-align: center;
}

.pic-box {
    display: inline-block;
    width: 330px;
    margin: 0 auto;
    text-align: left;
}

.pic-item {
    display: inline-block;
    width: 100px;
    height: 100px;
    margin: 5px;
}

.pic-img {
    display: inline-block;
    width: 100px;
    height: 100px;
}

.add-pic {
    width: 90%;
    height: 40px;
    line-height: 40px;
    margin: 10px auto;
    background-color: #fff;
    text-align: center;
    border: 1px dashed #ddd;
}

.process-box {
    background-color: #fff;
}